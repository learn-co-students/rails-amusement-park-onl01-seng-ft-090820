Signin! 

<%= form_tag ('/signin')  do %>
    <%= label_tag "Your name:" %>
    <%= collection_select :user, :name, User.all, :name, :name, include_blank: 'Select your name from the dropdown menu' %>
     <%= label_tag "Password"  %>
    <%= password_field_tag "password" %> <br>
    <%= submit_tag "Sign In" %>
<% end %>