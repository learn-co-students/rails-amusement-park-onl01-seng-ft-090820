  
  <%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <%= f.label :name %><br>
  <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username from this dropdown") %>
  <%= f.label :password, "Enter your password" %><br>
  <%= f.password_field :password %>
  <%= f.submit "Sign In", class: "btn btn-primary" %>

  <% end %>